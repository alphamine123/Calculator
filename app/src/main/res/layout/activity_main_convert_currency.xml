<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivityConvertCurrency"
    android:background="#a2bbcf"
    android:id="@+id/drawer"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:orientation="vertical"
            android:gravity="bottom|center_horizontal"
            android:layout_marginBottom="20dp"
            >
            <TextView
                android:id="@+id/textCurrencyStart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:textSize="65dp"
                android:layout_marginLeft="13dp"
                android:layout_marginBottom="20dp"
                android:text="@string/zero"
                android:textStyle="bold"
                ></TextView>
            <Spinner
                android:id="@+id/spinnerCurrencyStart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:layout_marginLeft="13dp"
                android:layout_marginBottom="30dp"
                />
            <TextView
                android:id="@+id/textCurrencyEnd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:textSize="65dp"
                android:layout_marginLeft="13dp"
                android:layout_marginBottom="20dp"
                android:text="@string/zero"
                ></TextView>
            <Spinner
                android:id="@+id/spinnerCurrencyEnd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:layout_marginLeft="13dp"
                android:layout_marginBottom="30dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentEnd="true"
                android:gravity="center">

                <Button
                    android:id="@+id/button7"
                    android:layout_width="110dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="@color/button_color"
                    android:text="7"
                    android:textSize="30sp"
                    />
                <Button
                    android:id="@+id/button8"
                    android:layout_width="110dp"
                    android:layout_height="80dp"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="@color/button_color"
                    android:text="8"
                    android:textSize="30sp"
                    />
                <Button
                    android:id="@+id/button9"
                    android:layout_width="110dp"
                    android:layout_height="80dp"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="@color/button_color"
                    android:text="9"
                    android:textSize="30sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentEnd="true"
                android:gravity="center">

                <Button
                    android:id="@+id/button4"
                    android:layout_width="110dp"
                    android:layout_height="80dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:backgroundTint="@color/button_color"
                    android:text="4"
                    android:textSize="30sp"
                    />
                <Button
                    android:id="@+id/button5"
                    android:layout_width="110dp"
                    android:layout_height="80dp"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="@color/button_color"
                    android:text="5"
                    android:textSize="30sp"
                    />
                <Button
                    android:id="@+id/button6"
                    android:layout_width="110dp"
                    android:layout_height="80dp"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="@color/button_color"
                    android:text="6"
                    android:textSize="30sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentEnd="true"
                android:gravity="center">

                <Button
                    android:id="@+id/button3"
                    android:layout_width="110dp"
                    android:layout_height="80dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:backgroundTint="@color/button_color"
                    android:text="3"
                    android:textSize="30sp"
                    />
                <Button
                    android:id="@+id/button2"
                    android:layout_width="110dp"
                    android:layout_height="80dp"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="@color/button_color"
                    android:text="2"
                    android:textSize="30sp"
                    />
                <Button
                    android:id="@+id/button1"
                    android:layout_width="110dp"
                    android:layout_height="80dp"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="@color/button_color"
                    android:text="1"
                    android:textSize="30sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:layout_marginBottom="20dp">

                <Button
                    android:id="@+id/buttonAC"
                    android:layout_width="110dp"
                    android:layout_height="80dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:backgroundTint="@color/button_color"
                    android:text="AC"
                    android:textSize="30sp"
                    />
                <Button
                    android:id="@+id/button0"
                    android:layout_width="110dp"
                    android:layout_height="80dp"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="@color/button_color"
                    android:text="0"
                    android:textSize="30sp"
                    />
                <Button
                    android:id="@+id/buttonPoint"
                    android:layout_width="110dp"
                    android:layout_height="80dp"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="@color/button_color"
                    android:text=","
                    android:textSize="30sp"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/navigation"
        android:fitsSystemWindows="true"
        android:layout_gravity="start"
        app:menu="@menu/calcul_menu"/>

</androidx.drawerlayout.widget.DrawerLayout>